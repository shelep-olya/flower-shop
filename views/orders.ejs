<section class="orders" id="orders">
    <h1 class="heading">Your <span>Orders</span></h1>
    <div class="box-container">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="box">
                    <span class="discount">-<%= product.discount %>% </span>
                    <div class="image">
                        <img src="/uploads/<%= product.photo.data %>" alt="<%= product.name %>" >
                        <div class="icons">
                            <a href="/add-to-favourites/<%= product.id %>" class="fas fa-heart"></a>
                            <a href="/add-to-cart/<%= product.id %>" class="cart-btn">add to cart</a>
                            <a href="/products/<%= product.id %>" class="fas fa-share"></a>
                        </div>
                    </div>
                    <div class="content">
                        <h3><%= product.name %></h3>
                        <div class="price"><%= product.priceWithDiscount %> $<span><%= product.price %>$</span></div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p>No orders found.</p>
        <% } %>
    </div>
</section>
