<section class="products" id="products">
    <h1 class="heading">Your <span>Orders</span></h1>
    <div class="box-container">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="box">
                    <span class="discount">-<%= product.discount %>% </span>
                    <div class="image">
                        <img src="/uploads/<%= product.photo.data %>" alt="<%= product.name %>" >
                        <div class="icons">
                            <a href="/users/remove-from-cart/<%= product.id %>" class="fas fa-times"></a>
                            <a href="/products/<%= product.id %>" class="fas fa-share"></a>
                            <a href="/payment">pay</a>
                        </div>
                    </div>
                    <div class="content">
                        <h3><%= product.name %></h3>
                        <div class="price"><%= product.priceWithDiscount %> $<span><%= product.price %>$</span></div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <p class="login-p">No orders found.</p>
        <% } %>
    </div>
</section>
